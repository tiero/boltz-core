{
  "name": "boltz-core-liquid-michael1011",
  "version": "1.0.0",
  "description": "Core library of Boltz for Liquid Network",
  "main": "dist/Boltz.js",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "lint": "eslint --max-warnings 0 --ext .ts . --ignore-pattern '**/docker/**'",
    "docker:start": "./startRegtest.sh",
    "docker:stop": "docker stop boltz-elements && docker rm boltz-elements && rm -rf ./docker/liquidregtest",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "jest test/unit",
    "test:int": "jest test/integration --runInBand --testTimeout 30000",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "npm run lint && npm run compile && npm run test",
    "version": "npm run changelog",
    "prepublishOnly": "npm run compile"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulpemventures/boltz-core.git"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/**/!(tsconfig.tsbuildinfo)"
  ],
  "dependencies": {
    "@boltz/bitcoin-ops": "^2.0.0",
    "bip32": "^4.0.0",
    "bip65": "^1.0.3",
    "bip66": "^1.1.5",
    "bitcoinjs-lib": "^6.1.0",
    "bn.js": "^5.2.1",
    "ecpair": "2.0.1",
    "liquidjs-lib": "^6.0.2-liquid.24",
    "tiny-secp256k1": "^2.2.1",
    "varuint-bitcoin": "^1.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vulpemventures/secp256k1-zkp": "^3.0.0",
    "bip39": "^3.1.0",
    "chai": "^4.3.7",
    "conventional-changelog-cli": "^2.2.2",
    "cross-os": "^1.5.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "ws": "^8.13.0"
  }
}
